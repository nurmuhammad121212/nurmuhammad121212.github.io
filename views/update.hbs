<div class="container">
  <form action="/update/{{db.id}}" method="POST" class="pt-5">
    <div class="form-group">
      <label for="exampleInputEmail1">Mahulot nomi</label>
      {{#if db}}
      <input type="text" class="form-control" id="exampleInputEmail1" name="name" value={{db.name}} aria-describedby="emailHelp"/>
      {{/if}}
      {{#else}}
       <input type="text" class="form-control" id="exampleInputEmail1" name="name" aria-describedby="emailHelp" />
      {{/else}}
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Mahsulot narxi</label>
       {{#if db}}
      <input type="number" class="form-control" name="price"  value={{db.price}} id="exampleInputPassword1" />
       {{/if}}
       {{#else}}
      <input type="number" class="form-control" name="price"  id="exampleInputPassword1" />
       {{/else}}
    </div>
   
    <button type="submit" class="btn btn-outline-danger">Malumotlar o'zgartirilsinmi?</button>
    
    <a href="/" class="btn btn-outline-success ">Bosh sahifa</a>
  </form>
</div>